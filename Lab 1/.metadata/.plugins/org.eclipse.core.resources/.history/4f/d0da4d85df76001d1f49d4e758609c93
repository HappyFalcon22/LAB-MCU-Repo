enum status
{
	INIT = 0,
	START = 1,			// When typing "#"
	R_O = 2,				// When typing "R"
	S = 3,				// When typing "S"
	T = 4,				// When typing "T"
	K = 5,				// When typing "K"
	WRONG_SYNTAX = 6,	// When typing some wrong chars
	END = 7,			// When typing "!"
	COMPLETE = 8
};

