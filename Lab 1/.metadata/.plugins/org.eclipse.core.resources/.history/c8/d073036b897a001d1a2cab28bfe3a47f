#include "buzzer.h"

// Initial config
int value[2] = {START, OFF};
int delay = BASE_DELAY;
int i = 0;
int time = 15;
void timer()
{

}

void buzzerRun()
{
	if (timer_flag == 1)
	{
		setTimer(1000);
		time--;
		if (time <= 0)
			time = BASE_TIME;
	}
	if (buzzer_flag == 1)
	{
		setBuzzer(delay);
		__HAL_TIM_SetCompare(&htim3, TIM_CHANNEL_3, value[i]);
		i = (i + 1) % 2;
		delay = 30 * time + 50;
	}
}


