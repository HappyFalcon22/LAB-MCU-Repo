enum status
{
	INIT = 0,
	START = 1,			// When typing "#"
	R = 2,				// When typing "R"
	S = 3,				// When typing "S"
	T = 4,				// When typing "T"
	O = 5,				// When typing "O"
	K = 6,				// When typing "K"
	WRONG_SYNTAX = 7,	// When typing some wrong chars
	END = 10			// When typing "!"
};

extern enum status state;


